---
// pages/index.astro

import MainLayout from '../layouts/MainLayout.astro';

// Define your site information
const siteTitle = "Sejal Vaidya";
const bannerTitle = "Sejal Vaidya";
const bannerDescription = "Tech Professional & Writer";

// Reduced to just Professional and Blog tiles
const sections = [
  {
    id: "professional",
    title: "Professional",
    description: "Data & ML Platforms | Tech Leadership | Data Strategy",
    image: "/assets/images/professional.jpg",
    url: "/professional",
    color: "style4"
  },
  {
    id: "blog",
    title: "Blog",
    description: "Data Landscape | Berlin Tech Ecosystem | Personal Essays",
    image: "/assets/images/blog.jpg",
    url: "/blog",
    color: "style3"
  }
];
---

<MainLayout
  title={siteTitle}
  bannerTitle={bannerTitle}
  bannerDescription={bannerDescription}
  showBanner={true}
>
  <!-- One: Tiles -->
  <section id="one" class="tiles">
      {sections.map((section) => (
        <article class={section.color} style={`background-image: url(${section.image});`}>
          <span class="image">
            <img src={section.image} alt={section.title} />
          </span>
          <header class="major">
            <h3><a href={section.url} class="link">{section.title}</a></h3>
            <p>{section.description}</p>
          </header>
        </article>
      ))}
      <div class="scroll-button-wrapper">
        <a href="#two" class="more scrolly"></a>
      </div>
  </section>

  <section id="two" class="about-section" style="background-image: url('/assets/images/berlin-fshain.jpg');">
    <div class="inner">
      <header class="major">
        <h2>About Me</h2>
      </header>
      <p>
        Hi, I'm Sejal—a Tech Professional with over a decade's experience in building data platform solutions,
        scaling ML infrastructure, and leading data strategy initiatives.  In my free time, I write, explore comedy,
        and dive into Berlin’s creative scene.
      </p>

      <ul class="actions text-center">
        <li><a href="/about" class="button next">More</a></li>
      </ul>

    </div>
    <a href="#contact" class="more scrolly"></a>
  </section>
</MainLayout>

<style>
  /* Add custom styling to make the banner and tiles fit the laptop screen */
  :global(#banner) {
    height: 66vh !important; /* Use !important to override */
    min-height: 200px !important;
    max-height: 66vh !important;
  }

  .tiles {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Two columns for the two tiles */
    height: 60vh; /* Together with banner makes 100vh (full screen) */
    background-image: url("/assets/images/profile_picture.jpg") !important;
    position: relative;
  }

  .tiles article {
    height: 100%;
    width: 100%;
  }

  /* Make the content section appear below the fold */
  #two {
    margin-top: 0;
    position: relative;
  }

  /* Responsive adjustments for smaller screens */
  @media screen and (max-width: 980px) {
    :global(#banner) {
      height: 30vh;
    }

    .tiles {
      height: 70vh;
    }

    .about-section {
      height: 30vh !important;
    }

    .about-section .inner {
      max-width: 80%;
      padding: 2rem 2rem;
    }
  }

  @media screen and (max-width: 736px) {
    .tiles {
      grid-template-columns: 1fr; /* Stack on mobile */
      height: auto;
    }

    .tiles article {
      height: 40vh;
    }

    .about-section {
      height: auto !important;
      min-height: 60vh !important;
      padding: 0;
    }

    .about-section .inner {
      max-width: 90%;
      padding: 3rem 1.5rem;
    }
  }

</style>