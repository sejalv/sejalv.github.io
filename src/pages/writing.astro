---
// pages/writing.astro
import MainLayout from '../layouts/MainLayout.astro';
import BookshelfPanel from '../components/BookshelfPanel.astro';
---

<MainLayout
    title="Writing"
    bannerImage='/assets/images/wm-bike.jpeg'
    bannerTitle="Notes & Essays"
    showBanner={true}>
    <Fragment slot="description-sub-text">
        I write creative non-fiction, satire, and short stories about life in Berlin and Mumbai, while reflecting on intersectional feminism and culture.
        Sometimes, I explore comedy through sketch and screen writing.
    </Fragment>
    <div id="main">
        <div class="sub-inner">
          <BookshelfPanel
              title="Bookshelf"
              minBooks={1}
              maxBooks={2}
              showTitle={true}
          />
        </div>

