<MainLayout
  title="Professional Experience | Sejal Vaidya"
  bannerTitle="Professional Journey"
  bannerDescription="14 Years of Data & Analytics Experience"
  showBanner={false}
>
  <div id="main">
    <section id="one" class="fixed-header">
      <div class="inner">
        <header class="major">
          <h1>Professional</h1>
        </header>
        <p align="left">With 14+ years of Tech industry experience building scalable data platforms in Digital Health, FinTech and e-Commerce.
        <br/>
        Proven track record in reliable and high-impact data systems, embedding platform thinking within cross-functional teams, and shaping data strategies aligned with long-term business goals.
        <br/><br/>
        Currently focused on Data Architecture and Platform Leadership, and designing modular infrastructure to enable analytics, ML, and product growth.
        </p>
      </div>
    </section>

    <!-- <a href={post.url} class="read-more">Read More â†’</a> -->

    <section id="two" class="inner">
      <header class="major">
          <h2>Experience</h1>
      </header>

      <div class="career-grid">
        {careerHistory.map((job) => (
          <article class="career-card">
            <div class="career-content">
              <h3>{job.company}</h3>
              <span class="date">{job.period}</span>
              <span class="date">{job.location}</span>
              <p class="read-more">{job.title}</p>
              <p>{job.description}</p>
            </div>
          </article>
        ))}
      </div>
    </section>
  </div>

  <!--
  // .read-more:hover {
    //  border-bottom-color: currentColor;
    // }
  -->

  <style>
    .career-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2em;
      margin: 2em 0;
    }

    .career-card {
      background: rgba(0, 0, 0, 0.05);
      border-radius: 4px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .career-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .career-image {
      display: block;
      width: 100%;
      height: 250px;
      overflow: hidden;
    }

    .career-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .career-card:hover .career-image img {
      transform: scale(1.05);
    }

    .career-content {
      padding: 1.5em;
    }

    .date {
      display: block;
      font-size: 0.8em;
      font-weight: bold;
      color: rgba(212, 212, 255, 0.5);
      margin-bottom: 1em;
    }

    .career-content h3 {
      margin-bottom: 0.5em;
      font-size: 1.5em;
    }

    .read-more {
      display: inline-block;
      font-style: italic;
      border-bottom: 1px solid transparent;
      transition: border-bottom-color 0.3s ease;
    }

    .fixed-header {
        width: 100%;
        background-color: #242943; /* Green: #87c5a4; */
        color: white;
        padding: 0.5rem 0;
        z-index: 10;
    }

    .fixed-header .inner {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    /* Background image with overlay */
    .fixed-header::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 72%;
        background-image: url('/assets/images/night-skyline.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Creates a parallax effect */
        opacity: 0.15; /* Subtle image visibility */
    }

  </style>
</MainLayout>