---
// layouts/MainLayout.astro

// Define the props for the layout
export interface Props {
  title: string;
  description?: string;
  bannerTitle?: string;
  bannerDescription?: string;
  showBanner?: boolean;
}

// Destructure the props with defaults
const {
  title,
  description = "Sejal Vaidya - Tech Professional",
  bannerTitle = "Sejal Vaidya",
  bannerDescription = "Tech Professional & Writer",
  showBanner = true
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
    <link rel="stylesheet" href="/assets/css/scroll-buttons.css" />
  </head>

  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Header -->
      <header id="header" class={showBanner ? "alt" : ""}>
        <a href="/" class="logo"><strong>Sejal</strong> <span>Vaidya</span></a>
        <nav>
          <a href="#menu">Menu</a>
        </nav>
      </header>

      <!-- Menu -->
      <nav id="menu">
        <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/professional">Professional</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
        <ul class="actions stacked">
          <li><a href="#contact" class="button primary fit">Contact</a></li>
        </ul>
      </nav>

      {showBanner && (
        <!-- Banner:
            <ul class="actions">
                <li><a href="#one" class="button next scrolly"></a></li>
            </ul>
        -->
        <section id="banner" class="major" style="background-image: url('/assets/images/beach.jpg');">
          <div class="inner">
            <header class="major">
              <h1>{bannerTitle}</h1>
            </header>
            <div class="content">
              <p>{bannerDescription}</p>
            </div>
          </div>
          <a href="#one" class="more scrolly"></a>
        </section>
      )}

      <!-- Main -->
      <div id="main">
        <slot />
      </div>

      <!-- Contact -->
      <section id="contact">
        <div class="inner text-center" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: -6rem;">
         <section style="width: 60%; padding-right: 0; box-sizing: border-box; border-right: none !important;">
          <header class="major">
              <h2>Contact</h2>
          </header>
         </section>
         <section>
            <ul class="icons contact-icons" style="justify-content: flex-end; display: flex;">
              <li><a href="https://www.linkedin.com/in/vaidyasejal/" class="icon brands alt fa-linkedin-in"><span class="label">LinkedIn</span></a></li>
              <li><a href="https://github.com/sejalv" class="icon brands alt fa-github"><span class="label">GitHub</span></a></li>
              <li><a href="https://sejalv.substack.com/welcome" class="icon solid alt fa-bookmark"><span class="label">Substack</span></a></li>
            </ul>
         </section>
        </div>

        <div class="inner">
          <section style="width: 100%; padding-right: 0; box-sizing: border-box; border-right: none !important;">
            <form method="post" action="#">
              <div class="fields">
                <div class="field half">
                  <label for="name">Name</label>
                  <input type="text" name="name" id="name" />
                </div>
                <div class="field half">
                  <label for="email">Email</label>
                  <input type="text" name="email" id="email" />
                </div>
                <div class="field">
                  <label for="message">Message</label>
                  <textarea name="message" id="message" rows="2"></textarea>
                </div>
              </div>
              <ul class="actions">
                <li><input type="submit" value="Send Message" class="primary" /></li>
                <li><input type="reset" value="Clear" /></li>
              </ul>
            </form>
          </section>
        </div>
      </section>

      <!-- Footer -->
      <footer id="footer" style="margin-top: -1rem;">
        <div class="inner">
          <ul class="copyright">
            <li>&copy; Sejal Vaidya</li>
            <li>Design: <a href="https://html5up.net/forty">HTML5 UP</a> and Astro</li>
          </ul>
        </div>
      </footer>
    </div>

    <!-- Scripts inline -->
    <script is:inline src="/assets/js/jquery.min.js"></script>
    <script is:inline src="/assets/js/jquery.scrolly.min.js"></script>
    <script is:inline src="/assets/js/jquery.scrollex.min.js"></script>
    <script is:inline src="/assets/js/browser.min.js"></script>
    <script is:inline src="/assets/js/breakpoints.min.js"></script>
    <script is:inline src="/assets/js/util.js"></script>
    <script is:inline src="/assets/js/main.js"></script>
    <script is:inline src="/assets/js/smooth-scroll.js"></script>

  </body>
</html>