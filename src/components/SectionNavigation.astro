---
// components/SectionNavigation.astro
const { sections, backgroundImage } = Astro.props;

---

<style>
  .section-container {
          background: rgba(255, 255, 255, 0.02);
          border-radius: 8px;
          border: 1px solid rgba(255, 255, 255, 0.1);
          margin: 2em 0;
          padding: 2.5em 2em;
  }

  .split-layout {
    display: flex;
    position: relative;
  }

  .split-left {
    width: 18%;
    position: sticky;
    top: 4rem;
    align-self: flex-start;
    height: max-content;
    min-height: 100vh;
    padding: 4rem 2rem 2rem;
    background-color: #2a2f4a;
  }

  .split-left::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: var(--bg-image);
    background-size: cover;
    background-position: center;
    background-attachment: fixed; /* parallax effect */
    opacity: 0.15;
    filter: blur(3px);
    z-index: 1;
  }

  .anchor-target {
      scroll-margin-top: 20px;
  }

  .split-right {
    flex: 1;
    padding-left: 2rem;
    min-width: 0;
    padding-right: 2rem;
    padding-bottom: 2.5rem;
  }

  .sub-inner {
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 2.5em 2em;
  }

  .split-right section::before {
      content: "";
      display: block;
      height: 10rem;
      margin-top: -10rem;
      visibility: hidden;
  }

  .split-left nav {
    position: sticky;
    top: 8rem;
    z-index: 2;
    text-align: center;
    padding: 1rem 0;
  }

  .split-left nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .split-left nav ul li {
    margin-bottom: 1rem;
  }

  .split-left nav ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: 500;
    font-size: 1.3rem;
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    padding-bottom: 0.25rem;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .split-left nav ul li a:hover {
    color: #f0f0f0;
    border-color: #f0f0f0;
  }

  /* Smooth scrolling for better UX */
  html {
    scroll-behavior: smooth;
  }

  @media (max-width: 768px) {
    .split-layout {
      flex-direction: column;
    }

    .split-left {
      width: 100%;
      border-right: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      top: 0;
      padding: 1rem;
      background-color: transparent;
    }

    .split-right {
      padding-left: 0;
      scroll-padding-top: 6rem;
    }

    .split-right section {
      padding-top: 4rem; /* Reduced for mobile */
      margin-top: -2rem;
    }

    .split-right section::before {
      height: 6rem; /* Adjusted for mobile */
      margin-top: -6rem;
    }
  }
</style>

<div class="split-layout" style={`--bg-image: url(${backgroundImage})`}>
  <aside class="split-left">
    <nav>
      <ul>
        {sections.map(section => (
          <li><a href={`#${section.id}`} class="nav-link">{section.label}</a></li>
        ))}
      </ul>
    </nav>
  </aside>

  <section class="split-right">
    <slot />
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {

    // Add smooth scrolling with offset to navigation links
    document.querySelectorAll('.nav-link').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();

        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          const offset = 60; // Smaller offset to land near the section border
          const elementPosition = targetElement.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - offset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>